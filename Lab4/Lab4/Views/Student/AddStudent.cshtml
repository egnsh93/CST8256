@model Lab4.ViewModels.StudentCourseViewModel
@{
    ViewBag.Title = "Add Student";
    ViewBag.HeaderImageSrc = @Url.Content("~/Content/images/SMD.png");
    ViewBag.HeaderImageAlt = "School of Media and Design";
}

<div class="page-header">
    <h2>Add Student</h2>
</div>

@using (Html.BeginForm("Add", "Student", FormMethod.Post, new {@class = "form-horizontal"}))
{
    <div class="form-group">
        @Html.LabelFor(m => m.StudentViewModel.Number, new {@class = "col-sm-2 control-label"})
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.StudentViewModel.Number, new {@class = "form-control", id = "studentNumber", placeholder = "Student Number"})
            @Html.ValidationMessageFor(m => m.StudentViewModel.Number)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.StudentViewModel.Name, new {@class = "col-sm-2 control-label"})
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.StudentViewModel.Name, new {@class = "form-control", id = "studentName", placeholder = "Student Name"})
            @Html.ValidationMessageFor(m => m.StudentViewModel.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.StudentViewModel.Type, new { @class = "col-sm-2 control-label" })
        <div class="radio radio-inline control-label">
            <label>
                @Html.RadioButtonFor(m => m.StudentViewModel.Type, "full-time", new {name = "type", id = "fullTime", @checked = true}) Full Time
            </label>
        </div>

        <div class="radio radio-inline control-label">
            <label>
                @Html.RadioButtonFor(m => m.StudentViewModel.Type, "part-time", new {name = "type", id = "partTime"}) Part Time
            </label>
        </div>

        <div class="radio radio-inline control-label">
            <label>
                @Html.RadioButtonFor(m => m.StudentViewModel.Type, "coop", new {name = "type", id = "coop"}) Coop
            </label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Add student to course</button>
        </div>
    </div>
}

@{Html.RenderPartial("_DisplayStudents");}



