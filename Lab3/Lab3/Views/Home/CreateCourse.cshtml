@model Lab3.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Create Course";
}

<div class="row">
    <div class="page-header">
        <h1>Create Course</h1>
    </div>
    
    @using (Html.BeginForm("CreateCourse", "Home", FormMethod.Post, new {@class = "form-horizontal"}))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Number, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Number, new {@class = "form-control", id = "courseNum", placeholder = "Enter course number"})
                @Html.ValidationMessageFor(m => m.Number)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "courseName", placeholder = "Enter course name" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Create Course</button>
            </div>
        </div>
    }

</div>
