@model Lab4.ViewModels.UserColourViewModel
@{
    ViewBag.Title = "Create User";
    ViewBag.HeaderImageSrc = @Url.Content("~/Content/images/SAT.png");
    ViewBag.HeaderImageAlt = "School of Advanced Technology";
}

<div class="page-header">
    <h2>Create User</h2>
</div>

@using (Html.BeginForm("AddColour", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Colour, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Colour, new { @class = "form-control", id = "userColour", placeholder = "Colour" })
            @Html.ValidationMessageFor(m => m.Colour)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Create User</button>
        </div>
    </div>
}

